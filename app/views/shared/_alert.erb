<div class="container mt-2">
  <div>
    <% if flash[:alert] %>
      <div class="alert alert-danger" data-testid="alert-error">
        <% flash[:alert].each do |error| %>
          <p class="mb-0"><%= error %></p>
        <% end %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <p class="alert alert-success" data-testid="alert-notice"><%= flash[:notice] %></p>
    <% end %>
  </div>
</div>
